@using Microsoft.AspNetCore.Identity
@using Reward_Backoffice.Areas.Identity.Data

@inject SignInManager<Reward_BackofficeUser> SignInManager
@inject UserManager<Reward_BackofficeUser> UserManager

<ul class="nav navbar-top-links justify-content-end " !important>
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item text-nowrap p-3" !important>
        <a id="manage" class="nav-link text-dark " asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello, @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item text-nowrap  p-3" !important>
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark" style="font-size:17px">Logout</button>
        </form>
    </li>
}

</ul>
