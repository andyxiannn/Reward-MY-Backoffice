@model Reward_Backoffice.Models.Dealer


<form method="post">
    <input asp-for="DealerId" hidden />
    <div class="border p-3">

        <div class="form-group row">

            <h2 class="text-info pl-3">Edit Dealer</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Code"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Code" class="form-control" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Branch"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Branch" class="form-control" />
                        <span asp-validation-for="Branch" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="IC"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="IC" class="form-control" />
                        <span asp-validation-for="IC" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="cost_sharing"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="cost_sharing" class="form-control" />
                        <span asp-validation-for="cost_sharing" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="email"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="email" class="form-control" />
                        <span asp-validation-for="email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="status"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="status" class="form-control"  />

                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Update"  />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>

                </div>

            </div>
        </div>

    </div>

</form>

@section Scripts{

    @{
        <partial_name ="_ValidationScriptsPartial" />
    }
}